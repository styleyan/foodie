<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.iswn.mapper.OrderItemsMapper" >
    <insert id="insertOrderItem">
        INSERT INTO order_items(`id`, `order_id`, `item_id`, `item_img`, `item_name`,  `item_spec_id`, `item_spec_name`, `price`, `buy_counts`)
          VALUES (#{id}, #{orderId}, #{itemId}, #{itemImg}, #{itemName}, #{itemSpecId}, #{itemSpecName}, #{price}, #{buyCounts});
    </insert>
</mapper>